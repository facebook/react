{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "../node_modules",
    "../../node_modules"
  ]
}
